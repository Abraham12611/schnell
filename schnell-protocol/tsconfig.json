{
  "compilerOptions": {
    "target": "es2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "outDir": "dist" // Optional: specifies output directory for compiled JS files
  },
  "include": [
    "./scripts/**/*.ts",
    "./test/**/*.ts",
    "./deploy/**/*.ts" // Assuming you might have a deploy folder
  ],
  "files": [
    "./hardhat.config.ts"
  ]
}